{
  "private": "true",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "build": "vitepress build --base /docs/",
    "build-mpa": "vitepress build --mpa --base /docs/",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "commit": "git-cz",
    "dev": "vitepress --base /docs/",
    "postinstall": "husky install",
    "lint": "prettier  --write . && eslint --fix --ext .js,.ts,.vue",
    "lint:check": "pnpm lint:prettier && pnpm lint:eslint && pnpm lint:zh",
    "lint:eslint": "eslint . --ext .js,.ts,.vue",
    "lint:md": "markdownlint **/*.md && lint:zh",
    "lint:prettier": "prettier --check .",
    "lint:zh": "zhlint 'docs/**/*.md'",
    "serve": "vitepress serve --base /docs/",
    "site:preview": "vitepress build --outDir _dist --base /"
  },
  "lint-staged": {
    "*.{js,ts,vue}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{md,json,yml}": [
      "prettier --write"
    ],
    "*.scss": [
      "prettier --write"
    ],
    "package.json": [
      "sort-package-json"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-git"
    }
  },
  "prettier": "prettier-config-vuepress",
  "dependencies": {
    "@actions/core": "^1.10.1",
    "@iconify-json/ic": "^1.1.14",
    "@iconify-json/logos": "^1.1.37",
    "@iconify-json/mdi": "^1.1.55",
    "@iconify-json/ph": "^1.1.6",
    "@mdit/plugin-container": "^0.4.8",
    "@mdit/plugin-figure": "^0.4.8",
    "@mdit/plugin-img-lazyload": "^0.4.8",
    "@mdit/plugin-img-mark": "^0.4.8",
    "@mdit/plugin-img-size": "^0.4.8",
    "@mdit/plugin-mark": "^0.4.8",
    "@mdit/plugin-sub": "^0.4.8",
    "@mdit/plugin-sup": "^0.4.8",
    "@types/js-yaml": "^4.0.8",
    "@vueuse/core": "^10.5.0",
    "@vueuse/integrations": "^10.5.0",
    "crypto": "^1.0.1",
    "dayjs": "^1.11.10",
    "feed": "^4.2.2",
    "js-yaml": "^4.1.0",
    "markdown-it-footnote": "^3.0.3",
    "medium-zoom": "^1.0.8",
    "qrcode": "^1.5.3",
    "sass": "^1.69.5",
    "typescript": "^5.2.2",
    "unocss": "^0.54.3",
    "vitepress": "1.0.0-rc.25",
    "vue": "^3.3.7",
    "vue-router": "^4.2.5"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.8.1",
    "@commitlint/config-conventional": "^17.8.1",
    "@commitlint/types": "^17.8.1",
    "@types/eslint": "^8.44.6",
    "@types/markdown-it": "^13.0.5",
    "@types/node": "^18.18.8",
    "@typescript-eslint/eslint-plugin": "^6.9.1",
    "@typescript-eslint/parser": "^6.9.1",
    "@unocss/eslint-config": "^0.54.3",
    "@vite-pwa/vitepress": "^0.2.3",
    "@vue/eslint-config-prettier": "^8.0.0",
    "@vue/eslint-config-typescript": "^11.0.3",
    "conventional-changelog-cli": "^3.0.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.52.0",
    "eslint-config-vuepress": "^4.5.0",
    "eslint-config-vuepress-typescript": "^4.6.0",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-prettier-vue": "^4.2.0",
    "eslint-plugin-vue": "9.16.1",
    "git-cz": "^4.9.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.3.0",
    "markdown-it": "^13.0.2",
    "markdownlint-cli": "^0.35.0",
    "pnpm": "^8.10.2",
    "prettier": "^3.0.3",
    "prettier-config-vuepress": "^4.4.0",
    "sort-package-json": "^2.6.0",
    "stylelint": "^15.11.0",
    "stylelint-config-prettier": "^9.0.5",
    "stylelint-config-standard": "^34.0.0",
    "stylelint-config-standard-scss": "^10.0.0",
    "stylelint-order": "^6.0.3",
    "tsconfig-vuepress": "^4.5.0",
    "vite-plugin-inspect": "^0.7.41",
    "zhlint": "^0.7.1"
  },
  "packageManager": "pnpm@8.6.12"
}
